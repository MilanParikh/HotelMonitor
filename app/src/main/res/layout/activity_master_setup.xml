<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.milanparikh.hotelmonitor.Master.MasterSetup">

    <TextView
        android:id="@+id/master_setup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Setup Script"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/master_setup_toolbar" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/master_setup_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gen_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Floor 1"
        app:layout_constraintRight_toLeftOf="@+id/gen_2_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/master_setup_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/gen_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Floor 2"
        app:layout_constraintTop_toBottomOf="@+id/master_setup_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.475"
        app:layout_constraintRight_toLeftOf="@+id/gen_3_button"
        app:layout_constraintLeft_toRightOf="@+id/gen_1_button" />

    <Button
        android:id="@+id/gen_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Floor 3"
        app:layout_constraintLeft_toRightOf="@+id/gen_2_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/master_setup_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/enable_master_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_master_for_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gen_2_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5" />
</android.support.constraint.ConstraintLayout>
