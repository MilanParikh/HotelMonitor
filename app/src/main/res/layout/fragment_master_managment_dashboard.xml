<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.milanparikh.hotelmonitor.Master.DrawerFragments.MasterManagmentDashboard">

    <android.support.v7.widget.Toolbar
        android:id="@+id/master_management_dashboard_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        app:title="Management Dashboard"
        app:titleTextColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/management_vacant_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacant and Checked"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/master_management_dashboard_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/management_due_out_text"
        app:layout_constraintLeft_toLeftOf="@+id/management_due_out_text" />

    <TextView
        android:id="@+id/management_due_out_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Out"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/management_stay_over_text"
        app:layout_constraintTop_toBottomOf="@+id/management_vacant_text"
        app:layout_constraintLeft_toLeftOf="@+id/management_stay_over_text" />

    <TextView
        android:id="@+id/management_stay_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay Over"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/management_private_text"
        app:layout_constraintTop_toBottomOf="@+id/management_due_out_text"
        app:layout_constraintLeft_toLeftOf="@+id/management_private_text" />

    <TextView
        android:id="@+id/management_private_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/management_maintenance_text"
        app:layout_constraintTop_toBottomOf="@+id/management_stay_over_text"
        app:layout_constraintLeft_toLeftOf="@+id/management_maintenance_text" />

    <TextView
        android:id="@+id/management_maintenance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance Required"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/management_out_order_text"
        app:layout_constraintTop_toBottomOf="@+id/management_private_text"
        app:layout_constraintLeft_toLeftOf="@+id/management_out_order_text" />

    <TextView
        android:id="@+id/management_out_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out of Order"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/management_maintenance_text"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
